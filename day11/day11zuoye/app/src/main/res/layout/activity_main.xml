<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            app:title=""
            android:layout_height="@dimen/dp_65">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="#181717"
                android:gravity="center"
                android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_199"
            android:background="@drawable/qi" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_20"
            android:textColor="#181717"
            android:text="出行必备" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/ming"
                android:layout_height="@dimen/dp_70" />

            <ImageView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_70"
                android:background="@drawable/fan" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_70"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_20"
                android:textColor="#181717"
                android:text="海外攻略" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:textSize="@dimen/sp_20"
                android:gravity="center_vertical"
                android:textColor="#20D1E7"

                android:text="查看更多" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/ba1"
                android:layout_height="@dimen/dp_70" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_70"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/mo1" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_20"
            android:textColor="#181717"
            android:text="国内攻略" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="@dimen/dp_70">

                <ImageView
                    android:layout_width="@dimen/dp_70"
                    android:background="@drawable/ta"
                    android:layout_height="@dimen/dp_55" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大理" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="@dimen/dp_70">

                <ImageView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/kuan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成都" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="@dimen/dp_70">

                <ImageView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/deng" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="杭州" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_70"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_20"
                android:textColor="#181717"
                android:text="魅力海岛" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:textSize="@dimen/sp_20"
                android:gravity="center_vertical"
                android:textColor="#20D1E7"
                android:text="查看更多" />
        </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_240"
            android:background="@drawable/sha"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:text="悠然古镇"
            android:textSize="@dimen/sp_20"
            android:gravity="center_vertical"
            android:textColor="#151616"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_185"
            android:padding="@dimen/dp_10"
            android:background="@drawable/gu"/>
        <EditText
            android:id="@+id/et_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入tag" />

        <Button
            android:id="@+id/btn_set_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加TAG"></Button>

        <Button
            android:id="@+id/btn_delete_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="删除所有TAG"></Button>

    </LinearLayout>

</ScrollView>