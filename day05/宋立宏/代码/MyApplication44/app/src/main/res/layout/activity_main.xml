<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/dp_341"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <SearchView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_10"

                    />

                <EditText
                    android:layout_width="@dimen/dp_231"
                    android:layout_height="@dimen/dp_40"
                    android:hint="请输入搜索内容" />

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_22"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:src="@drawable/sou" />

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_22"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:src="@drawable/ruli" />


            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp_343"
                android:layout_height="@dimen/dp_153"
                android:layout_gravity="center"
                android:src="@drawable/youxi" />

            <LinearLayout
                android:layout_width="@dimen/dp_343"
                android:layout_height="@dimen/dp_83"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:src="@drawable/qei1" />

                <ImageView
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_22"

                    android:src="@drawable/pei2" />

                <ImageView
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:src="@drawable/pei3" />

                <ImageView
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:src="@drawable/pei4" />

                <ImageView
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:src="@drawable/pei5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_343"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:text="诗歌群PK"
                    android:textSize="@dimen/dp_19" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_152"
                    android:text="08-01日晚8:00开始"
                    android:textSize="@dimen/dp_19" />


            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp_339"
                android:layout_height="@dimen/dp_169"
                android:layout_gravity="center"
                android:src="@drawable/pk" />

            <LinearLayout
                android:layout_width="@dimen/dp_339"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="@dimen/dp_79"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:text="丁香诗社"
                    android:textSize="@dimen/dp_10" />

                <Button
                    android:layout_width="@dimen/dp_79"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_100"
                    android:text="月季诗社"
                    android:textSize="@dimen/dp_10" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="两个社团谁更好看" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:text="荣誉诗人" />

            <LinearLayout
                android:layout_width="@dimen/dp_339"
                android:layout_height="@dimen/dp_57"
                android:layout_gravity="center"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_57"

                    android:src="@drawable/yeu1" />

                <ImageView
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_57"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:src="@drawable/yue2" />

                <ImageView
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_57"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:src="@drawable/yue3" />

                <ImageView
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_57"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:src="@drawable/yue4" />

                <ImageView
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_57"

                    android:src="@drawable/yue5" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_383"
                android:layout_height="@dimen/dp_35">
                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_18"
                    android:textSize="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:text="一起杜诗"/>
                <TextView
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_16"
                    android:textSize="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_230"
                    android:text="更多>"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="@dimen/dp_383"
                android:layout_height="@dimen/dp_373"
                android:id="@+id/rec"/>



        </LinearLayout>


        <com.google.android.material.tabs.TabLayout
            android:layout_width="@dimen/dp_374"
            android:layout_height="@dimen/dp_55"

            android:layout_gravity="center">

            <com.google.android.material.tabs.TabItem
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:icon="@drawable/icon_tab_home" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:icon="@drawable/icon_tab_find" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:icon="@drawable/icon_tab_publish" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:icon="@drawable/icon_tab_mine" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:icon="@drawable/icon_tab_sofa" />


        </com.google.android.material.tabs.TabLayout>


    </LinearLayout>
</ScrollView>