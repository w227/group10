<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_rec_dushi"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/tv_dushi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_rec_dushi"/>
    <TextView
        android:id="@+id/tv_dushi_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_rec_dushi"
        android:layout_below="@+id/tv_dushi_title"/>
    <TextView
        android:id="@+id/tv_dushi_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_rec_dushi"
        android:layout_below="@+id/tv_dushi_desc"/>
</RelativeLayout>