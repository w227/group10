<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/img_icon_duan"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tv_duan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_icon_duan"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/tv_duan_mc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_icon_duan"
        android:layout_below="@+id/tv_duan_title"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/tv_duan_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_duan_mc"
        android:layout_below="@+id/tv_duan_title"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/tv_duan_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_icon_duan"
        android:layout_below="@+id/tv_duan_mc"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"/>
</RelativeLayout>