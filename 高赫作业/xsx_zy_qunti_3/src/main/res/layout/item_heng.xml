<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/img_heng"
        android:layout_width="150dp"
        android:layout_height="70dp" />
    <TextView
        android:id="@+id/tv_heng"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_heng"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tv_address_heng"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_heng"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tv_date_heng"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_heng"
        android:layout_toRightOf="@+id/tv_address_heng"
        android:textSize="12sp"/>
</RelativeLayout>