<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintLeft_toRightOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar" />

    <TextView

        android:id="@+id/tv_feeds_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar" />

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_feeds_text" />

    <TextView
        android:id="@+id/tv_activityText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_cover" />

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_cell_like"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_diss"
        app:layout_constraintTop_toBottomOf="@id/tv_activityText" />

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_like"
        app:layout_constraintLeft_toRightOf="@id/iv_like"
        app:layout_constraintTop_toTopOf="@id/iv_like" />

    <ImageView
        android:id="@+id/iv_diss"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/icon_cell_diss"
        app:layout_constraintBottom_toBottomOf="@id/iv_like"
        app:layout_constraintLeft_toRightOf="@id/iv_like"
        app:layout_constraintRight_toLeftOf="@id/iv_comment"
        app:layout_constraintTop_toTopOf="@id/iv_like" />

    <TextView
        android:id="@+id/tv_diss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="è¸©"
        app:layout_constraintBottom_toBottomOf="@id/iv_like"
        app:layout_constraintLeft_toRightOf="@id/iv_diss"
        app:layout_constraintTop_toTopOf="@id/iv_like" />

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/icon_cell_comment"
        app:layout_constraintBottom_toBottomOf="@id/iv_like"
        app:layout_constraintLeft_toRightOf="@id/iv_diss"
        app:layout_constraintRight_toLeftOf="@id/iv_share"
        app:layout_constraintTop_toTopOf="@id/iv_like" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_like"
        app:layout_constraintLeft_toRightOf="@id/iv_comment"
        app:layout_constraintTop_toTopOf="@id/iv_like" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/icon_cell_share"
        app:layout_constraintBottom_toBottomOf="@id/iv_like"
        app:layout_constraintLeft_toRightOf="@id/iv_comment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_like" />

</androidx.constraintlayout.widget.ConstraintLayout>