<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="#fff "
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_home21"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="150dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/tv_home21"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_home21"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_home22"
        app:layout_constraintTop_toBottomOf="@id/tv_home21"
        app:layout_constraintLeft_toRightOf="@id/iv_home21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_home23"
        app:layout_constraintTop_toBottomOf="@id/tv_home22"
        app:layout_constraintLeft_toRightOf="@id/iv_home21"
        android:layout_width="wrap_content"
        android:textColor="#F44336"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_home22"
        app:layout_constraintTop_toBottomOf="@id/iv_home21"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="55dp"
        android:layout_height="55dp"/>

    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/tv_home24"
        app:layout_constraintTop_toBottomOf="@id/iv_home21"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_home25"
        app:layout_constraintTop_toBottomOf="@id/tv_home24"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>